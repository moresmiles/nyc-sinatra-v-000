<h1>Edit Figure:</h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label> Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name%>">

  <br><br>

  Edit Landmark:
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>" <%='checked' if @figure.landmarks.include?(landmark) %></input>
  <% end %>

  <br><br>

  <h2>Or Create a New Landmark: </h2>
  <label for="landmark"> Landmark Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"><br><br>

  Edit Title:
  <% Title.all.each do |title| %>
  <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.name%>" <%='checked' if @figure.titles.include?(title)%></input>
    <% end %>

  <br><br>

  <h2>Or Create a New Title: </h2>
  <label for="title"> Title Name: </label>
  <input type="text" name="title[name]" id="new_title"><br><br>

  <input type="submit" value="Edit Figure">
</form>

<h1>Create a New Figure:</h1>

<form action="/figures" method="post">
  <label for="name">Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name"><br><br>

  Landmark:
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"></input>
  <% end %>

  <br><br>

  <h2>Or Create a New Landmark: </h2>
  <label for="landmark"> Landmark Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"><br><br>

  Title:
  <% Title.all.each do |title| %>
  <label><%= title.name %></label>
    <input id="title_<%=title.id%>"  type="checkbox" name="figure[title_ids][]"  value="<%= title.id %>"></input>
  <% end %>

  <br><br>

  <h2>Or Create a New Title: </h2>
  <label for="title"> Title Name: </label>
  <input type="text" name="title[name]" id="new_title"><br><br>

  <input type="submit" value="Create New Figure">
</form>
